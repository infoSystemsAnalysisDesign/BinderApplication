<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BinderApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BinderApplication"
    xmlns:pages="clr-namespace:BinderApplication.Pages"
    FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent
     Title="SignIn"
     ContentTemplate="{DataTemplate local:SignInPage}"
     Route="SignIn" />

    <ShellContent
    Title="SignUp"
    ContentTemplate="{DataTemplate local:SignUpPage}"
    Route="SignUp" />

    <ShellContent
    Title="Loading"
    ContentTemplate="{DataTemplate local:Loading}"
    Route="Loading" />
    <TabBar>
        <ShellContent
         Title="Home"
         ContentTemplate="{DataTemplate pages:Binder}"
         Route="Binder" />
        <ShellContent    
         Title="Home"
         ContentTemplate="{DataTemplate pages:Match}"
         Route="Match" />
        <ShellContent
         Title="Home"
         ContentTemplate="{DataTemplate pages:Profile}"
         Route="Profile" />
    </TabBar>

</Shell>
