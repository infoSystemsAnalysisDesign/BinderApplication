<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BinderApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BinderApplication"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
     Title="SignIn"
     ContentTemplate="{DataTemplate local:SignInPage}"
     Route="SignIn" />

    <ShellContent
    Title="SignUp"
    ContentTemplate="{DataTemplate local:SignUpPage}"
    Route="SignUp" />

    <ShellContent
    Title="Loading"
    ContentTemplate="{DataTemplate local:Loading}"
    Route="Loading" />

</Shell>
