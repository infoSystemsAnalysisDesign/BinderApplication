<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BinderApplication.Pages.Profile"
             Background="Salmon">

    <VerticalStackLayout Spacing="20">

        <Label 
            Text="Profile"
            FontSize="50"
            FontAttributes="Bold"
            TextColor="White"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Account" Clicked="OnUserInfoButtonClicked"
            FontSize="25" Padding="20,20" HorizontalOptions="Center"
            WidthRequest="200"/>

        <Button Text="Liked List" Clicked="OnLikedButtonClicked"
            FontSize="25" Padding="20,20" HorizontalOptions="Center"
                WidthRequest="200"/>

        <Button Text="Hate List" Clicked="OnHistoryButtonClicked"
            FontSize="25" Padding="20,20" HorizontalOptions="Center"
                WidthRequest="200"/>

        <Button Text="Genres" Clicked="OnGenreButtonClicked"
            FontSize="25" Padding="20,20" HorizontalOptions="Center"
                WidthRequest="200"/>

    </VerticalStackLayout>

</ContentPage>
