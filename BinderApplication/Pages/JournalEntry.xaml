<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BinderApplication.Pages.JournalEntry">

    <StackLayout>
        <!-- Add a title entry -->
        <Entry x:Name="entryTitle" Placeholder="Title" />

        <!-- Existing entry for the journal text -->
        <Entry x:Name="entryJournal" Placeholder="Your Journal Entry" />

        <!-- Button to save the entry -->
        <Button Text="Save" Clicked="OnSaveClicked" />
    </StackLayout>

</ContentPage>
